<Window x:Class="WpfDuckHunt.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDuckHunt" xmlns:views="clr-namespace:WpfDuckHunt.Views"
        mc:Ignorable="d"
        Title="Duck Hunt" Height="550" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="..\graphics\background.png"
                AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <StackPanel Orientation="Horizontal"/>
        <views:MainGame Grid.Row="1" />
        <Button Content="Save Game" Margin="425,0,10,454" Grid.Row="1"/>
        <Button x:Name="uiButtonNewGame" Click="uiButtonNewGame_Click" Content="New Game" Margin="425,51,10,403" Grid.Row="1"/>

    </Grid>
</Window>
